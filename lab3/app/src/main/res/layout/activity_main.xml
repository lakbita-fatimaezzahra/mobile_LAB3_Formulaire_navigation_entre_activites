<?xml version="1.0" encoding="utf-8"?>
    <!-- activity_main.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/black"
                app:title="Navigation"
                app:titleTextColor="@android:color/white"/>



            <TextView android:text="Nom et PrÃ©nom" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/textNom"
                android:hint="Ex : LACHGAR Mohamed"
                android:inputType="textPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView android:text="Email" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/textEmail"
                android:hint="Ex : user@gmail.com"
                android:inputType="textEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView android:text="Phone" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/textPhone"
                android:hint="Ex : +212676000000"
                android:inputType="phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView android:text="Adresse" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/textAdresse"
                android:hint="Ex : 23, Hay Salam ..."
                android:inputType="textPostalAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView android:text="Ville" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/textVille"
                android:hint="Ex : Agadir"
                android:inputType="textCapWords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnEnvoyer"
                android:text="Envoyer"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>

